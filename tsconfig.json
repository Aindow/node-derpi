{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"allowJs": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"strictNullChecks": true,
		"outDir": "dist"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
